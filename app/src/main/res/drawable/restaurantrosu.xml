<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#ff710000"
                android:centerColor="#ff710000"
                android:endColor="#ff4b0000" />


            <padding

                android:left="2dp"
                android:right="2dp"
                />

            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item >
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#13c6a1"
                android:centerColor="#139e7c"
                android:endColor="#13694e" />


            <padding
                android:left="5dp"
                android:right="5dp"
                />
            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item>



    <item >
        <shape >
            <solid android:color="#ffffff" />
            <gradient android:angle="90"
                android:startColor="#ff4b0000"
                android:centerColor="#ff710000"
                android:endColor="#710000" />


            <padding

                android:left="5dp"
                android:right="5dp"
                />

            <corners
                android:bottomLeftRadius="0sp"
                android:bottomRightRadius="0sp"
                android:topLeftRadius="10sp"
                android:topRightRadius="0sp" />
        </shape>
    </item>
</selector>