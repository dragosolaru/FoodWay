<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#ff3b6faf"
                android:centerColor="#ff5276cd"
                android:endColor="#ff383b87" />


            <padding

                android:left="2dp"
                android:right="2dp"
                />

            <corners
                android:bottomLeftRadius="5sp"
                android:bottomRightRadius="5sp"
                android:topLeftRadius="5sp"
                android:topRightRadius="5sp" />
        </shape>
    </item >
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#13c6a1"
                android:centerColor="#139e7c"
                android:endColor="#13694e" />


            <padding
                android:left="5dp"
                android:right="5dp"
                />
            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item>



    <item >
        <shape >
            <solid android:color="#4661ac" />
            <gradient android:angle="90"
                android:startColor="#ff383b87"
                android:centerColor="#ff5276cd"
                android:endColor="#ff3b6faf" />

            <padding

                android:left="5dp"
                android:right="5dp"
                />

            <corners
                android:bottomLeftRadius="5sp"
                android:bottomRightRadius="5sp"
                android:topLeftRadius="5sp"
                android:topRightRadius="5sp" />
        </shape>
    </item>
</selector>