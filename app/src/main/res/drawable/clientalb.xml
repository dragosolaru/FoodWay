<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"

                android:startColor="#e6a5a5a5"
                android:centerColor="#e6ffffff"
                android:endColor="#E6ffffff"/>


            <padding

                android:left="2dp"
                android:right="2dp"
                />

            <corners
                android:bottomLeftRadius="0sp"
                android:bottomRightRadius="0sp"
                android:topLeftRadius="0sp"
                android:topRightRadius="10sp" />
        </shape>
    </item >
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#13c6a1"
                android:centerColor="#139e7c"
                android:endColor="#13694e" />


            <padding
                android:left="5dp"
                android:right="5dp"
                />
            <corners
                android:bottomLeftRadius="0sp"
                android:bottomRightRadius="0sp"
                android:topLeftRadius="0sp"
                android:topRightRadius="10sp" />
        </shape>
    </item>



    <item >
        <shape >
            <solid android:color="#ffffff" />
            <gradient android:angle="90"
                android:startColor="#e6ffffff"
                android:centerColor="#e6ffffff"
                android:endColor="#e6a5a5a5" />


            <padding

                android:left="5dp"
                android:right="5dp"
                />

            <corners
                android:bottomLeftRadius="0sp"
                android:bottomRightRadius="0sp"
                android:topLeftRadius="0sp"
                android:topRightRadius="10sp" />
        </shape>
    </item>
</selector>