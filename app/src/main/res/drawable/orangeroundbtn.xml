<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#ffffbe00"
                android:centerColor="#ffff9700"
                android:endColor="#ffb36100" />


            <padding

                android:left="2dp"
                android:right="2dp"
                />

            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item >
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff8e8e8e" />
            <gradient android:angle="90"
                android:startColor="#13c6a1"
                android:centerColor="#139e7c"
                android:endColor="#13694e" />


            <padding
                android:left="5dp"
                android:right="5dp"
                />
            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item>

    <item >
        <shape >
            <solid android:color="#ffbcbcbc" />
            <gradient android:angle="90"
                android:startColor="#ffb36100"
                android:centerColor="#ffff9700"
                android:endColor="#ffffbe00" />


            <padding

                android:left="5dp"
                android:right="5dp"
                />

            <corners
                android:bottomLeftRadius="12sp"
                android:bottomRightRadius="12sp"
                android:topLeftRadius="12sp"
                android:topRightRadius="12sp" />
        </shape>
    </item>
</selector>