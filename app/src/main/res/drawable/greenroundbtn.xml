<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
         <shape>

             <solid android:color="#ff8e8e8e" />
             <gradient android:angle="90"
                 android:startColor="#32ca27"
                 android:centerColor="#2d9325"
                 android:endColor="#2d7325" />


             <padding

            android:left="2dp"
            android:right="2dp"
             />

             <corners
            android:bottomLeftRadius="12sp"
            android:bottomRightRadius="12sp"
            android:topLeftRadius="12sp"
            android:topRightRadius="12sp" />
         </shape>
    </item >
    <item android:state_focused="true">
         <shape>
            <solid android:color="#ff8e8e8e" />
             <gradient android:angle="90"
                 android:startColor="#13694e"
                 android:centerColor="#139e7c"
                 android:endColor="#13c6a1" />


            <padding
                android:left="5dp"
                 android:right="5dp"
              />
             <corners
             android:bottomLeftRadius="12sp"
             android:bottomRightRadius="12sp"
             android:topLeftRadius="12sp"
             android:topRightRadius="12sp" />
        </shape>
    </item>

    <item >
        <shape >
         <solid android:color="#ffbcbcbc" />
            <gradient android:angle="90"
                android:startColor="#2d7325"
                android:centerColor="#2d9325"
                android:endColor="#32ca27" />


          <padding

        android:left="5dp"
        android:right="5dp"
         />

          <corners
        android:bottomLeftRadius="12sp"
        android:bottomRightRadius="12sp"
        android:topLeftRadius="12sp"
        android:topRightRadius="12sp" />
        </shape>
</item>
    </selector>