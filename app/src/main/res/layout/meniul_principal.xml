<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dragos.foodway.main.MeniulPrincipal"
    android:background="@drawable/fundal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/meniul_principal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Comanda"
            android:id="@+id/btnComanda"
            android:layout_row="0"
            android:layout_column="0"
            android:elegantTextHeight="false"
            android:background="@drawable/whiteroundbtn"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:textColor="#710000"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="7.5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locatii"
            android:id="@+id/btnRestaurante"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_below="@+id/btnComanda"
            android:background="@drawable/whiteroundbtn"

            android:clickable="false"
            android:focusableInTouchMode="false"
            android:textStyle="bold"
            android:textColor="#710000"
            android:layout_alignLeft="@+id/btnComanda"
            android:layout_alignStart="@+id/btnComanda"
            android:layout_alignRight="@+id/btnComanda"
            android:layout_alignEnd="@+id/btnComanda"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="7.5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inregistrare"
            android:id="@+id/btnInregistrare"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_below="@+id/btnRestaurante"
            android:background="@drawable/whiteroundbtn"
            android:textStyle="bold"
            android:textColor="#710000"
            android:layout_alignLeft="@+id/btnRestaurante"
            android:layout_alignStart="@+id/btnRestaurante"
            android:layout_alignRight="@+id/btnRestaurante"
            android:layout_alignEnd="@+id/btnRestaurante"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="7.5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Way"
            android:id="@+id/btnFoodWay"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/whiteroundbtn"
            android:layout_below="@+id/btnInregistrare"
            android:textStyle="bold"
            android:textColor="#710000"
            android:layout_alignLeft="@+id/btnInregistrare"
            android:layout_alignStart="@+id/btnInregistrare"
            android:layout_alignRight="@+id/btnInregistrare"
            android:layout_alignEnd="@+id/btnInregistrare"
            android:textSize="24sp"
            android:padding="10dp" />
    </LinearLayout>

</RelativeLayout>
