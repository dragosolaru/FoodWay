<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dragos.foodway.orase.AlbaIulia"
    android:background="@drawable/fundal"
    android:id="@+id/cluj_napoca">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:id="@+id/imageView"
        android:background="@drawable/the_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/selectie"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="12.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/judet_selectat"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/roundleftcornerradius"
            android:layout_gravity="left"
            android:layout_weight="0.50"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/oras_selectat"
            android:layout_row="0"
            android:layout_column="9"
            android:background="@drawable/roundrightcornerradius"
            android:layout_weight="0.50"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_gravity="right"
            android:paddingRight="20dp" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lista_firme"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/selectie"
        android:dividerHeight="10sp"
        android:divider="#00ffffff"
        android:gravity="center"
        android:textAlignment="center"/>

</RelativeLayout>
