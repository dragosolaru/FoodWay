<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="78dp"
    android:background="@drawable/whiteroundbtn"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/denumire"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:textSize="25sp"
        android:textColor="#710000"
        android:gravity="center"
        android:shadowColor="#7d7d7d"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textAlignment="gravity"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tip_firma"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:textColor="#710000"
        android:gravity="center|end"
        android:textAlignment="gravity"
        android:layout_below="@+id/denumire"
        android:shadowColor="#7d7d7d"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_marginTop="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/logo"
        android:layout_alignLeft="@+id/denumire"
        android:layout_alignStart="@+id/denumire" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/denumire"
        android:layout_toStartOf="@+id/denumire"
        android:layout_alignBottom="@+id/tip_firma"
        android:shadowColor="#7d7d7d"
        android:shadowDx="0.6"
        android:shadowDy="0.6"
        android:shadowRadius="0.5"
        android:layout_margin="5dp"
        />

</RelativeLayout>